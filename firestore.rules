rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic rules to allow authenticated users to read/write their own data
    
    // Helper
    function isAdmin() {
      return request.auth.token.email == 'admin@buslink.com' || 
             (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    function isConductor() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conductor';
    }

    // User Profiles
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Subcollections like favorites, tickets
      match /{document=**} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }
    
    // Public data (Trips/Routes) 
    // Allow update on trips so users can book seats (modify bookedSeats array)
    match /trips/{tripId} {
      allow read: if true;
      allow update: if request.auth != null;
      allow create, delete: if isAdmin();
    }

    match /routes/{routeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /schedules/{scheduleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Feedback
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
    }

    // Tickets Collection
    match /tickets/{ticketId} {
      // Users can see their own. Admins and Conductors can see all (for verification).
      allow read: if request.auth != null && (
          resource.data.userId == request.auth.uid || 
          resource == null || 
          isAdmin() || 
          isConductor()
      );
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
          resource.data.userId == request.auth.uid || 
          isAdmin() || 
          isConductor()
      );
    }

    // Refunds: Users create, Admins update (Approve/Reject)
    match /refunds/{refundId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAdmin();
    }

    // Refund Transactions: System/Admin only
    match /refund_transactions/{txnId} {
      allow read, write: if isAdmin();
    }

    // Notifications: Users create own, Admins create for others
    match /notifications/{notificationId} {
      allow create: if request.auth != null && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow read, update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}
