rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic rules to allow authenticated users to read/write their own data
    
    // Helper
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || 
             request.auth.token.email == 'admin@buslink.com';
    }

    // User Profiles
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Subcollections like favorites, tickets
      match /{document=**} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }
    
    // Public data (Trips/Routes) 
    // Allow update on trips so users can book seats (modify bookedSeats array)
    match /trips/{tripId} {
      allow read: if true;
      allow update: if request.auth != null;
      allow create, delete: if isAdmin();
    }

    match /routes/{routeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Tickets Collection
    match /tickets/{ticketId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource == null || isAdmin());
      allow create: if request.auth != null;
      allow update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}
